# Database Configuration
DB_HOST=localhost
DB_NAME=krause_dashboard
DB_USER=your_username
DB_PASS=your_password
DB_CHARSET=utf8mb4

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://krause-global.com/dashboard

# Security
SESSION_LIFETIME=3600
SESSION_NAME=KG_DASHBOARD_SESSION
CSRF_TOKEN_NAME=_csrf_token

# Paths (relative to project root)
STORAGE_PATH=../storage
UPLOAD_PATH=../storage/uploads
EXTRACTED_PATH=../storage/extracted
EXPORT_PATH=../storage/exports
SESSION_PATH=../storage/sessions
LOG_PATH=../storage/logs

# Upload Limits
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=application/pdf,image/png,image/jpeg

# PDF Extraction
PDF_EXTRACTION_METHOD=auto
PDFTOTEXT_PATH=/usr/bin/pdftotext

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeMe2026!
